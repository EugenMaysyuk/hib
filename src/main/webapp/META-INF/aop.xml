<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>

  <weaver>
    <!-- weave only specific package/classes -->
    <include within="org.hibernate.boot.internal.InFlightMetadataCollectorImpl"/>

    <!-- the weaving need to be enabled also for aspect classes to fix NoSuchMethodError:Aspect.aspectOf() -->
    <include within="com.may.HibernateAspect"/>
  </weaver>

  <aspects>
    <aspect name="com.may.HibernateAspect"/>
  </aspects>

</aspectj>